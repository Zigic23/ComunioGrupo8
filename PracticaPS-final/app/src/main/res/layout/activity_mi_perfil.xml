<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pdred.practicaps_final.Perfil.MiPerfil"
    android:background="#ffffff">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_below="@+id/quickContactBadge2">

        <TextView
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Usuario"
            android:id="@+id/textViewUser"
            android:ems="10"
            android:background="@drawable/rounded_edittext8"
            android:textIsSelectable="true"
            android:textStyle="bold"
            android:layout_weight="0.10" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Equipo"
            android:id="@+id/textViewTeam"
            android:layout_weight="0.08"
            android:background="@drawable/rounded_edittext8"
            android:padding="5dip"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Liga"
            android:id="@+id/textViewLiga"
            android:layout_weight="0.08"
            android:background="@drawable/rounded_edittext8"
            android:padding="5dip"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Puntos"
            android:id="@+id/textViewPoints"
            android:layout_weight="0.08"
            android:background="@drawable/rounded_edittext8"
            android:padding="5dip"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Presupuesto"
            android:id="@+id/textViewPresupuesto"
            android:layout_weight="0.08"
            android:background="@drawable/rounded_edittext8"
            android:padding="5dip"/>
    </LinearLayout>

    <QuickContactBadge
        android:layout_width="126dp"
        android:layout_height="140dp"
        android:id="@+id/quickContactBadge2"
        android:layout_gravity="right"
        android:layout_weight="0.41"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ib"
        android:padding="10dip"
        android:cropToPadding="false" />
</RelativeLayout>
