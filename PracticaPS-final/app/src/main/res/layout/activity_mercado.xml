<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pdred.practicaps_final.Mercado.Mercado"
    android:background="#ffffff">


    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewMercado"
        android:background="#ffffff"
        android:layout_marginTop="149dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext11"
        android:gravity="top"
        android:layout_alignRight="@+id/listViewMercado"
        android:layout_alignEnd="@+id/listViewMercado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextMercado"
            android:text="Proximo Lunes"
            android:textColor="#00014b"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:shadowRadius="1.5"
            android:shadowDx="1"
            android:shadowDy="2"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="#cdcdcd"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="116dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2015"
            android:id="@+id/anyo"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:textColor="#efefef" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sun, Nov 29"
            android:id="@+id/fecha"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/anyo"
            android:layout_alignStart="@+id/anyo" />

    </RelativeLayout>

</RelativeLayout>
