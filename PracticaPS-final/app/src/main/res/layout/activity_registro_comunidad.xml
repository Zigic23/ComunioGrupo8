<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pdred.practicaps_final.Registro.registroComunidad">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unirse a una comunidad"
        android:id="@+id/bUnirseC"
        android:layout_above="@+id/bUnirseNC"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unirse a una nueva comunidad"
        android:id="@+id/bUnirseNC"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTUnirseC"
        android:layout_above="@+id/bUnirseC"
        android:layout_alignRight="@+id/bUnirseC"
        android:layout_alignEnd="@+id/bUnirseC"
        android:layout_alignLeft="@+id/bUnirseC"
        android:layout_alignStart="@+id/bUnirseC"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE COMUNIDAD"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:background="#7b070707"
        android:textStyle="bold|italic"
        />
</RelativeLayout>