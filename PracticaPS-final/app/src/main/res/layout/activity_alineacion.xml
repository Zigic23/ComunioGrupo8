        android:padding="8dip"
        android:height="35dp"
        android:width="140dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defensa2"
        android:id="@+id/textViewDefensa2"
