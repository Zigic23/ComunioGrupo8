<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pdred.practicaps_final.Equipo.AlineacionEquipo"
    android:background="@drawable/campo2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Portero"
        android:id="@+id/textViewPortero"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="@drawable/rounded_edittext7"
        android:padding="8dip"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defensa1"
        android:id="@+id/textViewDefensa1"
        android:background="@drawable/rounded_edittext5"
        android:padding="8dip"
        android:textColor="#ffffff"
        android:layout_below="@+id/textViewMedio1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defensa2"
        android:id="@+id/textViewDefensa2"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_edittext5"
        android:padding="8dip"
        android:textColor="#ffffff"
        android:layout_above="@+id/textViewPortero"
        android:layout_toLeftOf="@+id/textViewPortero"
        android:layout_toStartOf="@+id/textViewPortero" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defensa3"
        android:id="@+id/textViewDefensa3"
        android:layout_alignTop="@+id/textViewDefensa2"
        android:layout_toRightOf="@+id/textViewPortero"
        android:layout_toEndOf="@+id/textViewPortero"
        android:background="@drawable/rounded_edittext5"
        android:padding="8dip"
        android:textColor="#ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defensa4"
        android:id="@+id/textViewDefensa4"
        android:background="@drawable/rounded_edittext5"
        android:padding="8dip"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textViewDefensa1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medio1"
        android:id="@+id/textViewMedio1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_edittext3"
        android:padding="8dip"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medio2"
        android:id="@+id/textViewMedio2"

        android:background="@drawable/rounded_edittext3"
        android:padding="8dip"
        android:textColor="#ffffff"
        android:layout_above="@+id/textViewMedio1"
        android:layout_alignRight="@+id/textViewDefensa1"
        android:layout_alignEnd="@+id/textViewDefensa1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medio3"
        android:id="@+id/textViewMedio3"
        android:layout_above="@+id/textViewMedio1"
        android:layout_alignLeft="@+id/textViewDefensa4"
        android:layout_alignStart="@+id/textViewDefensa4"
        android:background="@drawable/rounded_edittext3"
        android:padding="8dip"
        android:textColor="#ffffff"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delentero1"
        android:id="@+id/textViewDelantero1"
        android:background="@drawable/rounded_edittext6"
        android:padding="8dip"
        android:textColor="#ffffff"
        android:layout_below="@+id/textViewDelantero3"
        android:layout_toLeftOf="@+id/textViewDelantero3"
        android:layout_toStartOf="@+id/textViewDelantero3"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delentero2"
        android:id="@+id/textViewDelantero2"
        android:background="@drawable/rounded_edittext6"
        android:padding="8dip"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textViewDelantero1"
        android:layout_toRightOf="@+id/textViewDelantero3"
        android:layout_toEndOf="@+id/textViewDelantero3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delentero3"
        android:id="@+id/textViewDelantero3"
        android:background="@drawable/rounded_edittext6"
        android:padding="8dip"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />
</RelativeLayout>
