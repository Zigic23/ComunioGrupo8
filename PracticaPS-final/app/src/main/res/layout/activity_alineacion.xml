        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medio3"
        android:id="@+id/textViewMedio3"
        android:background="@drawable/rounded_edittext3"
        android:padding="8dip"
        android:textColor="#ffffff"
        android:height="35dp"
        android:width="140dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/textViewMedio2"
        android:layout_alignBottom="@+id/textViewMedio2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delentero1"
        android:id="@+id/textViewDelantero1"
        android:background="@drawable/rounded_edittext6"
        android:padding="8dip"
        android:textColor="#ffffff"
