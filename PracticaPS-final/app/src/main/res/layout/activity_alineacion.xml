        android:layout_centerHorizontal="true"
        android:padding="8dip"
        android:height="35dp"
        android:width="140dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defensa1"
        android:id="@+id/textViewDefensa1"
        android:background="@drawable/rounded_edittext5"
        android:textColor="#ffffff"
        android:layout_above="@+id/textViewDefensa2"
        android:layout_alignRight="@+id/textViewMedio2"
        android:layout_alignEnd="@+id/textViewMedio2"
