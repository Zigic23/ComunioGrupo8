        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delentero2"
        android:id="@+id/textViewDelantero2"
        android:background="@drawable/rounded_edittext6"
        android:padding="8dip"
        android:textColor="#ffffff"
        android:height="35dp"
        android:width="140dp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textViewDelantero1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delentero3"
        android:id="@+id/textViewDelantero3"
        android:background="@drawable/rounded_edittext6"
        android:padding="8dip"
        android:textColor="#ffffff"
        android:layout_marginTop="26dp"
        android:height="35dp"
        android:width="140dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textViewMedio1"
        android:layout_alignStart="@+id/textViewMedio1" />
</RelativeLayout>
