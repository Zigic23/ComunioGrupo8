        android:layout_marginEnd="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defensa3"
        android:id="@+id/textViewDefensa3"
        android:background="@drawable/rounded_edittext5"
        android:textColor="#ffffff"
        android:padding="8dip"
        android:height="35dp"
        android:width="140dp"
        android:textAlignment="center"
        android:layout_below="@+id/textViewDefensa1"
