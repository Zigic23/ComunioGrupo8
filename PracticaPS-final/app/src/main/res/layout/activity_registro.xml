<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre usuario"
        android:id="@+id/tVNombre"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#080404"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/eTUsuario"
        android:layout_below="@+id/tVNombre"

        android:layout_alignLeft="@+id/tVNombreEquipo"
        android:layout_alignStart="@+id/tVNombreEquipo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contraseña"
        android:id="@+id/tVPass1"
        android:layout_below="@+id/eTUsuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#080404"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/eTPass1"
        android:layout_below="@+id/tVPass1"
        android:layout_alignRight="@+id/eTUsuario"
        android:layout_alignEnd="@+id/eTUsuario"
        android:layout_alignLeft="@+id/tVNombreEquipo"
        android:layout_alignStart="@+id/tVNombreEquipo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirmar contraseña"
        android:id="@+id/tVPass2"
        android:layout_below="@+id/eTPass1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#080404" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/eTPass2"
        android:layout_below="@+id/tVPass2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/eTPass1"
        android:layout_alignEnd="@+id/eTPass1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre de la comunidad"
        android:id="@+id/tVComunidad"
        android:layout_below="@+id/eTNombreEquipo"
        android:textColor="#080404"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre del equipo"
        android:id="@+id/tVNombreEquipo"
        android:layout_alignRight="@+id/tVNombre"
        android:layout_alignEnd="@+id/tVNombre"
        android:textColor="#080404"
        android:layout_below="@+id/eTPass2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTNombreEquipo"
        android:inputType="text"
        android:layout_below="@+id/tVNombreEquipo"
        android:layout_alignLeft="@+id/tVNombreEquipo"
        android:layout_alignStart="@+id/tVNombreEquipo"
        android:layout_alignRight="@+id/eTPass2"
        android:layout_alignEnd="@+id/eTPass2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registarme"
            android:id="@+id/bRegistrar"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|bottom" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validar"
            android:id="@+id/bValidar"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:layout_below="@+id/tVNombre"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="right|top" />
    </FrameLayout>


</RelativeLayout>
